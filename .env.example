# Project Management System Environment Configuration
# Copy this file to .env and customize as needed

# Database Configuration
PM_DATABASE_PATH=./data/jira_lite.db

# Default project settings
PM_DEFAULT_PROJECT_ID=
PM_DEFAULT_OWNER=agent:claude-code

# Web Interface Configuration
FLASK_APP=src.jira_lite.app
FLASK_ENV=development
FLASK_PORT=1929
FLASK_DEBUG=false

# MCP Server Configuration
MCP_SERVER_PORT=7464
MCP_LOG_LEVEL=INFO

# Git Configuration (optional - will use system git config if not set)
GIT_USER_NAME=
GIT_USER_EMAIL=

# GitHub Integration (optional - for future GitHub Issues sync)
GITHUB_TOKEN=
GITHUB_REPO=

# Feature Flags
ENABLE_AUTO_COMMIT=false
ENABLE_AUTO_PUSH=false
ENABLE_GITHUB_SYNC=false

# Security
SECRET_KEY=change-this-to-a-random-secret-key
API_KEY=

# Development Settings
DEBUG_MODE=false
VERBOSE_LOGGING=false